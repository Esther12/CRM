@model CRM2.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
		<script>
                protected void btnConfirm_Click(object sender, EventArgs e)
        {
            Response.Redirect("../Inv/Create.cshtml");
        }
		</script>
</head>
<body>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Emp_lname" class="control-label">Employee Last Name</label>
                <input asp-for="Emp_lname" class="form-control" />
                <span asp-validation-for="Emp_lname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Emp_fname" class="control-label">Employee First Name</label>
                <input asp-for="Emp_fname" class="form-control" />
                <span asp-validation-for="Emp_fname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Emp_phone" class="control-label">Contect Phone</label>
                <input asp-for="Emp_phone" class="form-control" />
                <span asp-validation-for="Emp_phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Emp_email" class="control-label">Email</label>
                <input asp-for="Emp_email" class="form-control" />
                <span asp-validation-for="Emp_email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cus_ID" class="control-label">Customer</label>
                <select asp-for="Cus_ID" class ="form-control" asp-items="ViewBag.Cus_ID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
			<div class="form-group">
                <asp:Button runat="server" ID="myButton" OnClientClick="window.location.href='../Inv/Create.cshtml'; return false;"
                      Text="Submit"></Button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
